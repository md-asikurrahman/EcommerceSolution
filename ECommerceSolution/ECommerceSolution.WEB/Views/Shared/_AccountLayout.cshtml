
<!DOCTYPE html>
<html lang="zxx">
<head>
    <partial name="_LayoutMetaPartial" />
    <title>@ViewData["Title"] - Ecommerce</title>
    <!-- main css -->
    <link rel="stylesheet" href="~/theme/css/main.css">
    <!-- main css -->
    <style>
        .nav-link::after {
            content: none !important;
        }
    </style>
    @await RenderSectionAsync("Styles", false)
</head>
<body>

    @* <partial name="_NavigationMenuPartial" model="@Model" /> *@
    <partial name="_NavigationMenuPartial"  />

    @RenderBody()

    @* <partial name="_NewsletterAreaPartial" /> *@

    @* <partial name="_FooterPartial" model="@Model" /> *@
    <partial name="_FooterPartial" />

    <script src="~/theme/js/ajax.js"></script>
    <script src="~/theme/js/formValidation.js"></script>
    <script src="~/theme/vendor/jquery/jquery.min.js"></script>

    <!--bootstrap-->
    <script src="~/theme/vendor/bootstrap/js/popper.min.js"></script>
    <script src="~/theme/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--bootstrap-->

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", false)
    
    <p data-toggle="modal" class="no-margin" data-target="#myModal" id="model2"></p>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog2">
            <div class="modal-content text-center">
                <div class="modal-body modal-body2">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title">
                        <img src="~/theme/images/thankyou.png" class="img-fluid" alt="thank you">
                    </h3>
                    <h4 class="thanks">We will get back to you as soon as possible.</h4>
                </div>
            </div>
        </div>
    </div>

</body>
</html>