<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            @if (ViewBag.ForgetPasswordMessage != null)
            {
                string cls = (ViewBag.ForgetPasswordMessage as string)!.ToLower().Contains("failed") ? "danger" : "success";

                <div class="alert alert-@cls text-center font-20" role="alert">
                    <strong>@ViewBag.ForgetPasswordMessage</strong>
                </div>
            }
            <div class="login">
                <h2>Forget Password</h2>
                <form asp-area="" asp-controller="Account" asp-action="ForgetPassword" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post" asp-antiforgery="true">
                    <div class="form-group">
                        <label for="exampleInputEmail1"><strong>Username or email address *</strong></label>
                        <input type="email" asp-for="UserName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="clearfix"></div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
