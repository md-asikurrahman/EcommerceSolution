<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            @if (ViewBag.ResetPasswordMessage != null)
            {
                string cls = (ViewBag.ResetPasswordMessage as string)!.ToLower().Contains("invalid") || (ViewBag.ResetPasswordMessage as string)!.ToLower().Contains("try") || (ViewBag.ResetPasswordMessage as string)!.ToLower().Contains("failed") ? "danger" : "success";

                <div class="alert alert-@cls text-center font-20" role="alert">
                    <strong>@ViewBag.ResetPasswordMessage</strong>
                </div>
            }

            <div class="login">
                <h2>Reset Password</h2>
                <form asp-area="" asp-controller="Account" asp-action="ResetPassword" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post" asp-antiforgery="true">
                    <input asp-for="Code" type="hidden" />

                    <div class="form-group">
                        <label for="exampleInputEmail1"><strong>Email</strong></label>
                        <input type="email" asp-for="UserName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" readonly>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            Password
                            <small>
                                <span asp-validation-for="Password"></span>
                            </small>
                        </label>
                        <input asp-for="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label">
                            Confirm Password
                            <small>
                                <span asp-validation-for="ConfirmPassword"></span>
                            </small>
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control">
                    </div>

                    <div class="clearfix"></div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Confirm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>